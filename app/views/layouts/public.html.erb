<%= render :partial => 'layouts/shared/header' %>
	<div class="wrapper">
		<header>
			<h1>just<br />one<br />more</h1>
		</header>
		<section id="promo">
			<%= yield :promotion %>
		</section>
		<section id="content">
			<%= yield %>
		</section>
		<section id="support">
			<%= yield :support %>
			<ul id="socialmedia">
				<li>
					<%= link_to image_tag('vimeo_button.png'), 'http://vimeo.com/justonemore' %>
				</li>
				<li>
					<%= link_to image_tag('facebook_button.png'), 'http://www.facebook.com/pages/Justonemore/181448301871432' %>
				</li>
				<li class="last">
					<%= link_to image_tag('twitter_button.png'), 'http://twitter.com/jstonemre' %>
				<li>
			</ul>
		</section>
	</div>
<%= render :partial => 'layouts/shared/footer' %>